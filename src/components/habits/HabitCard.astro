---
const { title, habit_description } = Astro.props;
---

<div
  style="background-color:#25262B;"
  class="max-h-fit flex flex-row justify-between gap-4 rounded-3xl p-6 hover:shadow-xl transition-shadow duration-500 ease-in-out"
>
  <button class="w-fit">
    <i
      class="ti ti-circle text-2xl text-white hover:text-green-400 transition-colors ease-in-out duration-100"
    ></i>
  </button>
  <div class="w-full">
    <h1 class="text-gray-300 text-lg">{title}</h1>
    <p class="text-gray-400 text-sm">{habit_description}</p>
  </div>
  <button class="w-fit">
    <i
      class="ti ti-trash text-2xl text-white hover:text-red-500 transition-colors ease-in-out duration-100"
    ></i>
  </button>
</div>
